              <h6 class="fw-bold mb-1"><%= item.name %></h6>
              <p class="small text-muted mb-1"><%= item.description %></p>
              <p class="text-light fw-bold btn btn-success mb-0">$<%= item.price %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Desserts -->
  <section class="mb-5">
    <h3 class="mb-4 border-bottom pb-2">üç∞ Desserts</h3>
