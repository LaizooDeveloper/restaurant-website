        </div>
      <% }) %>
    </div>
  </section>

  <!-- Extras -->
  <section class="mb-5">
    <h3 class="mb-4 border-bottom pb-2">‚ûï Extras</h3>
    <div class="row g-3">
      <% extras.forEach(item => { %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="card shadow-sm h-100" style="background-color: rgb(190, 172, 255);">
            <% if (item.image) { %>
              <img src="<%= item.image %>" class="card-img-top" alt="<%= item.name %>" style="height:160px; object-fit:cover;">
            <% } %>
            <div class="card-body p-2 text-center">
              <h6 class="fw-bold mb-1"><%= item.name %></h6>
              <p class="small text-muted mb-1"><%= item.description %></p>
