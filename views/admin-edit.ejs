<%- include("partials/header") %>

<h2>Edit Item</h2>

<form method="POST" action="/admin/edit/<%= item._id %>">
  <input type="text" name="name" value="<%= item.name %>" required class="form-control mb-2">
  <select name="category" class="form-control mb-2" required>
    <option value="dish" <%= item.category === "dish" ? "selected" : "" %>>Dish</option>
    <option value="drink" <%= item.category === "drink" ? "selected" : "" %>>Drink</option>
    <option value="dessert" <%= item.category === "dessert" ? "selected" : "" %>>Dessert</option>
    <option value="extra" <%= item.category === "extra" ? "selected" : "" %>>Extra</option>
  </select>
  <input type="number" name="price" value="<%= item.price %>" required class="form-control mb-2">
  <textarea name="description" class="form-control mb-2"><%= item.description %></textarea>
  <button class="btn btn-primary">Save Changes</button>
</form>

<%- include("partials/footer") %>
